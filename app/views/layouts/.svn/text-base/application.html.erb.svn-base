<!DOCTYPE html>
<html>
<head>
  <title>ReleaseNotes</title>
  <%= stylesheet_link_tag "app.css" %>
  <%= javascript_include_tag "jquery/jquery-1.4.2.min.js", "jquery.rails.js", "application.js" %>
  <%= csrf_meta_tag %>
  <%= yield :head %>
</head>
<body>

<div class="nav-top">
  <div class="nav-top-right">
    <% if current_user %>
      <span class="nav-item">User: <%= current_user.username %></span> |
      <span class="nav-item<%= set_nav('user_preferences') %>"><%= link_to "Preferences", user_preferences_edit_path %></span> |
      <span class="nav-item"><%= link_to "Logout", logout_path %></span>
    <% end %>
  </div>
  <div class="nav-top-left">
  <% if current_user %>
    <span class="nav-item<%= set_nav('releases') %>"><%= link_to "Releases", releases_path %></span> |
    <span class="nav-item<%= set_nav('archives') %>"><%= link_to "Archives", archives_path %></span> |
    <span class="nav-item<%= set_nav('users') %>"><%= link_to "Users", users_path %></span>
  <% end %>
  </div>
</div>

<%= yield %>

</body>
</html>
